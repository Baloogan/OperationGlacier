                {{#xif " window.Number(this.row.Flt) < 10 "}}Flt{{else}}<span class="handlebars-value-warning">Flt</span>{{/xif}}
                /
                {{#xif " window.Number(this.row.Eng) < 10 "}}Eng{{else}}<span class="handlebars-value-warning">Eng</span>{{/xif}}
                /
                {{#xif " window.Number(this.row.Fire) < 10 "}}Fire{{else}}<span class="handlebars-value-warning">Fire</span>{{/xif}}
                /
                {{#xif " window.Number(this.row.Weapon) < 10 "}}Wep{{else}}<span class="handlebars-value-warning">Wep</span>{{/xif}}
